#!/bin/sh

set -e

if [ remove = "$1" -o abort-install = "$1" -o disappear = "$1" ]
then
    for app in debian-uxterm debian-xterm htop sm.puri.OSK0 telegramdesktop vim
    do
        dpkg-divert --package mobian-tweaks-common --remove --rename \
                    --divert /usr/share/applications/$app.desktop.orig \
                    /usr/share/applications/$app.desktop
    done
fi

